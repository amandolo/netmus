<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
          xmlns:g="urn:import:com.google.gwt.user.client.ui">
   
   <ui:style src="css/LoginView.css" />
   
   <g:HTMLPanel>
   	<div class="{style.main}">

   		<div style="position: relative; width: 100%; height: 100%">
   		
   			<div style="margin-left: 60px; text-align: left; width: 390px; height: 200px; border: 0px solid #FF0000;">
   				<div style="float: left; width: 170px;">Username:</div><div style="">Password:</div>
   			
   				<g:TextBox ui:field="user"  styleName="{style.user}">	</g:TextBox>
   				<g:TextBox ui:field="password" styleName="{style.pass}">	</g:TextBox>
   				<g:Label ui:field="login" styleName="{style.login}">Login</g:Label>
   				
   				<div style="margin-top: 15px; border: 0px solid #FF0000; position: relative;">
   				<div style="float: left; margin-top: 6px; margin-right: 3px;"><g:RadioButton ui:field="check_google" name="check_g"/></div>
   				<img src="images/google_logo.png" style="width: 100px; float: left;" />
   				<div style="float: left; margin-top: 6px; margin-right: 3px; margin-left: 45px;"><g:RadioButton ui:field="check_netmus" name="check_n"/></div>
   				<img src="images/netmus_scritta.png" style="width: 120px; float: left;" />
   				</div>
   				
 			</div>
   			
   		
   		
   		</div>

   		<img src="images/netmus.png" style="position: absolute; bottom: 10px; left: 20px; width: 300px;"/>
   		<div style="position: absolute; bottom: 20px; right: 30px; color: #999999; font-size: 12px; font-family: Verdana; text-decoration: underline;">Policy</div>
   		<div style="position: absolute; bottom: 20px; right: 80px; color: #999999; font-size: 12px; font-family: Verdana; text-decoration: underline;">Terms</div>
   	</div>
   </g:HTMLPanel>
   
</ui:UiBinder>
