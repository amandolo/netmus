  <servlet-mapping>
    <servlet-name>loginService</servlet-name>
    <url-pattern>/netmus/loginService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>pdfService</servlet-name>
    <servlet-class>it.unipd.netmus.server.PdfServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>pdfService</servlet-name>
    <url-pattern>/netmus/pdfService</url-pattern>
  </servlet-mapping>
  
    <servlet>
  	<servlet-name>pdfLoaderServlet</servlet-name>
  	<servlet-class>it.unipd.netmus.server.PDFLoaderServlet</servlet-class>
  </servlet>
    <servlet-mapping>
  	<servlet-name>pdfLoaderServlet</servlet-name>
  	<url-pattern>/pdf</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>libraryService</servlet-name>
    <servlet-class>it.unipd.netmus.server.LibraryServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>libraryService</servlet-name>
    <url-pattern>/netmus/libraryService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>songsService</servlet-name>
    <servlet-class>it.unipd.netmus.server.SongServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>songsService</servlet-name>
    <url-pattern>/netmus/songsService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>usersService</servlet-name>
    <servlet-class>it.unipd.netmus.server.UserServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>usersService</servlet-name>
    <url-pattern>/netmus/usersService</url-pattern>
  </servlet-mapping>
  
